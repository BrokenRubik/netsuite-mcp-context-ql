{
    "compilerOptions": {
        // Specify the path for built files here
        // We recommend the project name, for example
        // "../../src/FileCabinet/SuiteScripts/my-custom-scripts"
        "outDir": "../../src/FileCabinet/SuiteScripts/build",
        "rootDir": ".",
        "baseUrl": ".",

        // Specify the target version of ECMAScript here
        "target": "ES2022",
        "lib": [
            "ES2022",
        ],

        // This is necessary for NetSuite's API as it relies in comments
        "removeComments": false,
        "newLine": "LF",

        // This is necessary for NetSuite's Script Format
        "module": "AMD",

        "allowJs": false,
        "strict": true,
        "strictNullChecks": true,
        "sourceMap": false,

        "moduleResolution": "node",
        "experimentalDecorators": true,
   
        // NetSuite type definitinos
        "paths": {
            "N": [
                "../../node_modules/@hitc/netsuite-types/N"
            ],
            "N/*": [
                "../../node_modules/@hitc/netsuite-types/N/*"
            ]
        }
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "node_modules",
        "../../node_modules"
    ]
}